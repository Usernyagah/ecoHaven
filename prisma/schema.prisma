// === prisma/schema.prisma ===

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid())
  name         String?
  email        String    @unique
  passwordHash String?
  role         Role      @default(USER)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  accounts Account[]
  sessions Session[]
  orders   Order[]

  @@map("users")
  @@index([email])
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  providerId        String
  providerUserId    String  @map("provider_user_id")
  accessToken       String? @db.Text
  refreshToken      String? @db.Text
  expiresAt         DateTime?
  tokenType         String?
  scope             String? @db.Text
  idToken           String? @db.Text
  sessionState      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, providerUserId])
  @@map("accounts")
  @@index([userId])
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
  @@index([userId])
}

model Category {
  id          String    @id @default(uuid())
  name        String
  slug        String    @unique
  description String?   @db.Text
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  products Product[]

  @@map("categories")
  @@index([slug])
}

model Product {
  id           String    @id @default(uuid())
  name         String
  slug         String    @unique
  description  String    @db.Text
  priceInCents Int
  stock        Int       @default(0)
  images       String[]
  categoryId   String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  category   Category    @relation(fields: [categoryId], references: [id])
  orderItems OrderItem[]

  @@map("products")
  @@index([categoryId])
  @@index([slug])
}

model Order {
  id           String      @id @default(uuid())
  userId       String
  totalInCents Int
  status       OrderStatus @default(PENDING)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  user       User        @relation(fields: [userId], references: [id])
  orderItems OrderItem[]

  @@map("orders")
  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

model OrderItem {
  id                String   @id @default(uuid())
  orderId           String
  productId         String
  quantity          Int
  priceInCents      Int      @map("price_in_cents")
  productName       String   @map("product_name")
  productImageUrl   String?  @map("product_image_url")
  createdAt         DateTime @default(now())

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])

  @@map("order_items")
  @@index([orderId])
  @@index([productId])
}

enum Role {
  USER
  ADMIN

  @@map("role")
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  DELIVERED
  CANCELLED

  @@map("order_status")
}
